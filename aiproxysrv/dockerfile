FROM python:3.10-slim AS base

# Create image directory
RUN mkdir /images

WORKDIR /app

# Copy Files
COPY .env .env
COPY alembic.ini alembic.ini
COPY src/ ./src/
COPY pyproject.toml .

# Install curl
RUN apt-get update && \
    apt-get install -y curl && \
    rm -rf /var/lib/apt/lists/*

# Install PIP Dependencies
RUN pip install --no-cache-dir -e .


EXPOSE 5050
CMD ["gunicorn", "-w", "4", "-b", "0.0.0.0:5050", "--timeout", "180", "--limit-request-line", "16384", "--limit-request-field_size", "32768", "--limit-request-fields", "100", "wsgi:app"]
